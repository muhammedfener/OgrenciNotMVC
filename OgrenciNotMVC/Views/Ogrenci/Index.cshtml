@using OgrenciNotMVC.Models.EntityFramework
@model List<TBLOGRENCILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>ÖĞRENCİ ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>CİNSİYET</th>
        <th>KULÜP</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach (var ogrenci in Model)
        {
            <tr>
                <td>
                    @ogrenci.OGRID
                </td>
                <td>
                    @ogrenci.OGRAD
                </td>
                <td>
                    @ogrenci.OGRSOYAD
                </td>
                <td>
                    @ogrenci.OGRCINSIYET
                </td>
                <td>
                    @ogrenci.OGRKULUP
                </td>
                <td>
                    <a href="/Ogrenci/Sil/@ogrenci.OGRID" class="btn btn-danger">Sil</a>
                    <a href="/Ogrenci/OgrenciGetir/@ogrenci.OGRID" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Ogrenci/YeniOgrenci" class="btn btn-primary">Yeni Öğrenci Ekle</a>